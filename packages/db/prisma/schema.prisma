generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id           String   @id @default(uuid())
  firstName    String
  lastName     String?
  email        String
  password     String?
  isVerified   Boolean  @default(false)
  profileImage String?
  bio          String?
  roomsAdmin   Room[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Room {
  Id          String   @id @default(uuid())
  Name        String
  adminId     String
  thumbnail   String?
  isPrivate   Boolean  @default(false)
  admin       User     @relation(fields: [adminId], references: [Id])
  subscribers String[]
  subadmins   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
